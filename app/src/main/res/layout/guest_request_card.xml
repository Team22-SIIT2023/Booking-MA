<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/backround"
    android:id="@+id/request_card_item">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- timeSlot -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Slot: "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewTimeSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- price -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- guest -->
        <TextView
            android:id="@+id/labelGuest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest: "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewGuest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/labelCancellations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancellations: "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewCancellations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- guestNumber -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest Number: "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewGuestNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- accommodation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accommodation: "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewAccommodation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- status -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/deleteRequest"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:autoSizeTextType="uniform"
            android:backgroundTint="@color/darkPurple"
            android:text="Delete request"
            android:textSize="12sp" />
    </LinearLayout>


