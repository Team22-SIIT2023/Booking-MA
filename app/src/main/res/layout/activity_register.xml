<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkPurple"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/roundcorner"
        android:orientation="vertical"
        android:backgroundTint="@color/purple">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="28dp"
                android:layout_marginTop="26dp"
                android:layout_height="28dp"
                android:src="@drawable/bee"
                android:layout_marginBottom="10dp"
                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="155dp" />
            <TextView
                android:id="@+id/messageTxt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="32dp"
                android:text="@string/messageSignUp"
                android:textColor="@color/black"
                android:textSize="18.5sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:id="@+id/emailTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/black" />

            <TextView
                android:id="@+id/passwordTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="15dp"
                android:text="@string/passwordTxt"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/passwordField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="textPassword"
                android:textColorHint="@color/black" />

            <TextView
                android:id="@+id/passwordRepeatTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:text="@string/passwordRepeatTxt"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/passwordRepeatField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="textPassword"
                android:textColorHint="@color/black" />

            <TextView
                android:id="@+id/fullNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="15dp"
                android:text="@string/firstName"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/firstNameField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:textColorHint="@color/black" />

            <TextView
                android:id="@+id/lastNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="15dp"
                android:text="@string/LastName"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/lastNameField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:textColorHint="@color/black" />

            <TextView
                android:id="@+id/adressTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:text="@string/addressRegister"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/adressField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:inputType="text"
                android:textColorHint="@color/black" />

            <TextView
                android:id="@+id/phoneTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:text="@string/phone"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/phoneField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:inputType="phone"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="2dp"
                android:gravity="center">
                <Button
                    android:id="@+id/signupButton"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/purple"
                    android:text="@string/signupButtonText"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="0.6dp" />
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
